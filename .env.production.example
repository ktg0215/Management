# サブドメイン用 環境変数テンプレート
# BB.edwtoyama.com でのデプロイ用

# ===========================================
# バックエンド環境変数 (backend/.env)
# ===========================================

# Database Configuration
DATABASE_URL=postgresql://deploy_user:YOUR_DB_PASSWORD@localhost:5432/management_system
DB_HOST=localhost
DB_PORT=5432
DB_NAME=management_system
DB_USER=deploy_user
DB_PASSWORD=YOUR_DB_PASSWORD

# JWT Configuration
JWT_SECRET=GENERATE_RANDOM_64_CHAR_STRING_HERE
JWT_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=production
PORT=3001
LOG_LEVEL=INFO

# CORS Configuration（サブドメイン指定）
CORS_ORIGIN=https://BB.edwtoyama.com
CORS_CREDENTIALS=true

# Feature Flags
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true

# ===========================================
# フロントエンド環境変数 (next-app/.env.local)
# ===========================================

# API URL（サブドメイン指定）
NEXT_PUBLIC_API_URL=https://BB.edwtoyama.com/api
